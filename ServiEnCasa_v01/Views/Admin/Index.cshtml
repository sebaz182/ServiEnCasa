@model IEnumerable<ServiEnCasa_v01.Models.Administradores>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

<h2>Administradores</h2>
<hr />
<div class="container">
    <div class="row col-md-6 col-md-offset-2 custyle">
        <div class="form-group">
            @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
            {
                @*@Html.DropDownList("ProfesionID", (SelectList)ViewBag.ProfesionID, "Seleccionar Profesión", new { @class = "form-control" })
                    <br />
                    <input type="submit" value="Buscar" class="btn btn-primary" />*@
            }
            <a href="@Url.Action("Create", "Admin")" class="btn btn-primary btn-xs pull-right"><b>+</b> Agregar Nuevo Administrador </a>
        </div>
        <table id="tareas" class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>E-Mail</th>
                    <th>Estado</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => p.Id_Administrador)</td>
                            <td>@Html.DisplayFor(modelItem => p.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => p.Apellido)</td>
                            <td>@Html.DisplayFor(modelItem => p.Email)</td>
                            <td>@Html.DisplayFor(modelItem => p.Activo)</td>
                            <td class="text-center">
                                <a class='btn btn-info btn-xs' href="@Url.Action("Edit","Admin",new { id = p.Id_Administrador})"><span class="glyphicon glyphicon-edit"></span> Editar</a>
                                <a href="@Url.Action("Delete","Admin",new { id = p.Id_Administrador})" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Eliminar</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>